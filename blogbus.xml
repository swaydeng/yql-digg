<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
    <meta>
        <author>Sway Deng</author>
        <description>Blogbus blog</description>
	<documentationURL>http://www.blogbus.com</documentationURL>
        <sampleQuery>SELECT * FROM {table} WHERE user='nakedtechnologist'</sampleQuery>
    </meta>
    <bindings>
        <select itemPath="" produces="XML" >
            <urls>
                <url env="all">http://{user}.blogbus.com/index.rdf</url>
            </urls>
            <inputs>
                <key id="user" type="xs:string" paramType="path" required="true" />
            </inputs>
        </select>
    </bindings>
</table>

