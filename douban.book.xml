<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
    <meta>
        <author>Sway Deng</author>
        <description>Douban book table</description>
		<documentationURL>http://www.douban.com</documentationURL>
        <sampleQuery>SELECT * FROM {table} WHERE user='comboy'</sampleQuery>
    </meta>
    <bindings>
        <select itemPath="" produces="XML" >
            <urls>
                <url env="all">http://api.douban.com/book/subjects?tag={tag}</url>
            </urls>
            <inputs>
                <key id="tag" type="xs:string" paramType="path" required="true" />
            </inputs>
        </select>
    </bindings>
</table>

